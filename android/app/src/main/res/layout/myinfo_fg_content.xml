<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background2">

    <LinearLayout
        android:id="@+id/ly_top_bar"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_white"
            android:layout_margin="5dp"
            android:textSize="8sp"
            android:text="登录"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_white"
            android:layout_margin="5dp"
            android:textSize="8sp"
            android:text="语言:中文"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_white"
            android:layout_margin="5dp"
            android:textSize="8sp"
            android:text="开放时间:6:30-22:00"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/L1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/qianlan"
            android:layout_weight="3">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="个人信息"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/L2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/bg_white"
            android:layout_weight="2">
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="借阅"
                android:textColor="@color/bg_black"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/L3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/bg_white"
            android:layout_weight="3">
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="借阅历史"
                android:textColor="@color/bg_black"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/L4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/bg_white"
            android:layout_weight="2">
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="还书"
                android:textColor="@color/bg_black"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="320dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/person_l1"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:background="@color/dilan"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/info_img"
                android:layout_width="320dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:padding="20dp"
                android:src="@mipmap/person_info" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/person_l2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:background="@color/dilan"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/info_img2"
                android:layout_width="320dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:padding="20dp"
                android:src="@mipmap/borrow_books" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/person_l3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:background="@color/dilan"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="320dp"
                android:layout_height="290dp"
                android:layout_gravity="center"
                android:padding="20dp"
                android:src="@mipmap/history" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/person_l4"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:background="@color/dilan"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="320dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:padding="20dp"
                android:src="@mipmap/return_book" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>